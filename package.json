{
  "name": "@dfhernandez/sds-native-theme",
  "version": "0.1.2",
  "description": "Library written in JS that contains all themes for native apps",
  "author": "Daniel Hernandez <fhernandez@2600hz.com> (https://github.com/shark764)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "source": "src/index",
  "files": [
    "bin",
    "build",
    "tools",
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "yarn clean && tsc",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json)\"",
    "prettify": "yarn run format && yarn run lint:fix",
    "full-check": "yarn run prettify && yarn run typescript",
    "release": "release-it",
    "test": "jest --watchAll"
  },
  "dependencies": {
    "@dfhernandez/js-utilities": "^0.5.0",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/styled-components": "^5.1.12",
    "@types/styled-components-react-native": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "commitlint": "^11.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.0",
    "jest": "^26.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "release-it": "^14.2.2",
    "rimraf": "^3.0.2",
    "typescript": "~4.0.0"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "native",
    "style",
    "theme",
    "utilities"
  ],
  "license": "MIT",
  "homepage": "https://github.com/2600hz/sds-native-theme#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2600hz/sds-native-theme.git"
  },
  "bugs": {
    "url": "https://github.com/2600hz/sds-native-theme/issues"
  }
}
